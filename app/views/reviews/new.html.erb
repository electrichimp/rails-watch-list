
<div class="container">
  <h2>Escribe tu review de la lista "<%= @list.name %>"</h2>
  <div class="row justify-content-center mt-5">
    <div class="card p-3 mb-3 col-12 col-md-6 col-lg-6">
      <%= simple_form_for([@list, @review]) do |f| %>
        <%= f.input :content %>
        <%= f.submit 'guardar review', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
